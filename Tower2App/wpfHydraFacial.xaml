                                                        <GradientStop Color="#FF64666b" Offset="0"/>
                                                        <GradientStop Color="#FF64666b" Offset="0.459"/>
                                                        <GradientStop Color="#FF64666b" Offset="0.783"/>
                                                    </LinearGradientBrush>
                                                </ProgressBar.Background>
                                            </ProgressBar>

