                                        <Button x:Name="btnViewAll"  Style="{StaticResource st_FlatButton1}"  Width="150" Height="90" Canvas.Left="-20" Canvas.Top="23"   Background="{x:Null}" BorderBrush="{x:Null}" Click="btnViewAll_Click" >
