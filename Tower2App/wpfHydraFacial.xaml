                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Image x:Name="imgPlay" Source = "Skin/Images/n_play.png" />
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <Button x:Name="btnReplay" Style="{StaticResource AddShadow}"  Width="54" Height="50" Click="btnReplay_Click"  Grid.Row="1" Margin="546,0,38,0"  >
