                                            </Button>

                                            <Canvas Grid.Row="2" Margin="0,0,0,43">

                                                <Button x:Name="btnPause" Style="{StaticResource AddShadow}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Click="btnPause_Click" Height="36" BorderThickness="0" Padding="0" Background="#00000000" Canvas.Left="154" Margin="0" Canvas.Top="10">
