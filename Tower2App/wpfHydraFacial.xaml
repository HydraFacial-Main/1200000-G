                                    <Grid.RowDefinitions>
                                        <!-- right hand side center grid -->
                                        <RowDefinition Height="380" />
                                        <!-- Title -->
                                        <RowDefinition Height="*" />
                                        <!--Space-->
                                    </Grid.RowDefinitions>

