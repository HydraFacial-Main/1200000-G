                                    <Line x:Name="lne_H" Grid.Row="0" Grid.Column="1" Stretch="Fill" StrokeThickness="0.5" Stroke="#FF65666b"  X1="20" Y1="200" Y2="200" Width="585" Height="20" Canvas.Top="507" Canvas.Left="645" Margin="28,342,0,26" HorizontalAlignment="Left"/>


