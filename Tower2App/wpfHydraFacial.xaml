<Window x:Class="Edge.Tower2.UI.HydraFacial" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Edge.Tower2.UI" Title="HydraFacial"
        xmlns:DesignInControl="clr-namespace:Edge.Tower2.UI"
        xmlns:local="clr-namespace:Edge.Tower2.UI" 
        
        Height="1024"
        Width="1280"
        ResizeMode="NoResize"
        x:Name="Me"
        Style="{StaticResource Window}" Activated="Me_Activated" Deactivated="Me_Deactivated" Closing="Me_Closing" Unloaded="Me_Unloaded" 
        >

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\rsStyle.xaml"/>
                <ResourceDictionary Source="Resources\rsRoundButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <ui:BooleanToInvertedVisibilityConverter x:Key="BooleanToInvertedVisibilityConverter"/>
            <local:ProgressForegroundConverter x:Key="ProgressForegroundConverter"/>

            <Storyboard x:Key="sbSlideR" Storyboard.TargetProperty="(Canvas.Left)">
                <DoubleAnimation From="-600" To="0" Duration="0:0:0.3"/>
            </Storyboard>
            <Storyboard x:Key="sbSlideL" Storyboard.TargetProperty="(Canvas.Left)">
                <DoubleAnimation From="600" To="0" Duration="0:0:0.5"/>
            </Storyboard>
        </ResourceDictionary>

    </Window.Resources>

