                                <Grid x:Name="grdRightPanel" Grid.Row="1" Grid.Column="1" Margin="0,0,1,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="700" />

