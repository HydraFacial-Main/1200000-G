<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="st_lv_row" TargetType="ListViewItem">
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                <Setter Property="Background" Value="#FFeee6da" />
            </Trigger>
            <Trigger Property="ItemsControl.AlternationIndex"  Value="1">
                <Setter Property="Background" Value="#FFdfd1bb" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="st_lv_row1" TargetType="{x:Type ListViewItem}">
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                <Setter Property="Background" Value="LightSkyBlue"></Setter>
            </Trigger>
            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                <Setter Property="Background" Value="LightGray"></Setter>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Orange"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="st_lv_row2" TargetType="{x:Type ListViewItem}">
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                <Setter Property="Background" Value="#FFeee6da" />
            </Trigger>
            <Trigger Property="ItemsControl.AlternationIndex"  Value="1">
                <Setter Property="Background" Value="#FFdfd1bb" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="st_lv_row3" TargetType="{x:Type ListViewItem}">
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                <Setter Property="Background" Value="#00e0dfde" />
            </Trigger>
            <Trigger Property="ItemsControl.AlternationIndex"  Value="1">
                <Setter Property="Background" Value="#ffd1d0cf" />
            </Trigger>
        </Style.Triggers>
    </Style>
   

    <Style x:Key="st_Label" TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="{StaticResource st_fonts}" />              <!-- 00115a1-0005 -->
    </Style>

    <Style x:Key="st_Label_Medium" TargetType="{x:Type Label}">
        <Setter Property="FontFamily"  Value="{StaticResource st_fonts_medium}" />      <!-- 00115a1-0005 -->
    </Style>

    <Style x:Key="st_Label_Bold" TargetType="{x:Type Label}">
        <Setter Property="FontFamily"  Value="{StaticResource st_fonts_bold}"/>         <!-- 00115a1-0005 -->
    </Style>

    <Style x:Key="st_TextBox" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource st_fonts}" />              <!-- 00115a1-0006 -->
    </Style>
    
    <Style x:Key="st_TextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Gotham Light,Verdana" />
    </Style>
</ResourceDictionary>