<Window x:Name="winMain" x:Class="Edge.Tower2.UI.wpfInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource Window}"
        Title="wpfInfo" Height="1024" Width="1280" Visibility="Collapsed">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\H_Scroll.xaml"/>
                <ResourceDictionary Source="Resources\rsStyle.xaml"/>
                <ResourceDictionary Source="Resources\rsRoundButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Viewbox Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="1024" Height="819">

            <Grid Width="1280" Height="1024">
                <Image Source="Skin\images\t2\popup_hot.png" Width="1280" Height="1024"/>
                
                <Image x:Name="imgBG0" Width="1280" Height="1024" Stretch="Fill" />
                <Image x:Name="imgBG1" Width="1280" Height="1024" Stretch="Fill" />
                <Image x:Name="imgBG2" Width="1280" Height="1024" Stretch="Fill" />
                <Image x:Name="imgBG3" Width="1280" Height="1024" Stretch="Fill" />

                <Button x:Name="btn1" Content=""  HorizontalAlignment="Left" Height="122" Margin="566,500,0,0" VerticalAlignment="Top" Width="151" Click="btn1_Click"/>

                <Button x:Name="btnClose"   HorizontalAlignment="Left" Height="76" Margin="866,310,0,0" VerticalAlignment="Top" Width="86" Click="btnClose_Click"/>
                <!--Style="{StaticResource st_FlatButton1}"-->
            </Grid>
        </Viewbox>
    </Grid>
</Window>
