        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ui:NavBar x:Name="NavBar" DockPanel.Dock="Top" Grid.Row="0" Grid.ColumnSpan="2" SelectedButton="HydraFacial"/>

        <Canvas HorizontalAlignment="Left" Height="919" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="680">
            <Button x:Name="btnLogin" Content="Login" Height="36" Canvas.Left="10" Canvas.Top="20" Width="38"/>

            <Button x:Name="btnQuickStart" Content="Quick Start" Style="{StaticResource st_FlatButtonStyle}" Height="265" Canvas.Left="30" Canvas.Top="84" Width="308" Foreground="#FFF9F3F3" BorderBrush="{x:Null}" Background="#FF08C5D8"/>
            <Button x:Name="btnProtocols" Content="Protocols" Style="{StaticResource st_FlatButtonStyle}" Height="265" Canvas.Left="351" Canvas.Top="86" Width="308" Foreground="#FFF9F3F3" BorderBrush="{x:Null}" Background="#FF08C5D8"/>
            <Button x:Name="btnTechniques" Content="Techniques" Style="{StaticResource st_FlatButtonStyle}" Height="265" Canvas.Left="29" Canvas.Top="354" Width="308" Foreground="#FFF9F3F3" BorderBrush="{x:Null}" Background="#FF08C5D8"/>
            <Button x:Name="btnModalities" Content="Modalities" Style="{StaticResource st_FlatButtonStyle}" Height="265" Canvas.Left="351" Canvas.Top="356" Width="308" Foreground="#FFF9F3F3" BorderBrush="{x:Null}" Background="#FF08C5D8"/>
            <Button x:Name="btnCamera" Content="Camera" Style="{StaticResource st_FlatButtonStyle}" Height="265" Canvas.Left="29" Canvas.Top="624" Width="308" Foreground="#FFF9F3F3" BorderBrush="{x:Null}" Background="#FF08C5D8"/>
            <Button x:Name="btnSettings" Content="Settings" Style="{StaticResource st_FlatButtonStyle}" Height="265"  Canvas.Left="351" Canvas.Top="626" Width="308" Foreground="#FFF9F3F3" BorderBrush="{x:Null}" Background="#FF08C5D8"/>
        </Canvas>
        <Canvas Grid.Column="1" HorizontalAlignment="Left" Height="869" Margin="34,60,0,0" Grid.Row="1" VerticalAlignment="Top" Width="501">
            <Button x:Name="btnPatientConsent" Content="Patient Consent" Style="{StaticResource st_FlatButtonStyle}" Canvas.Left="78" Canvas.Top="708" Width="148" Height="93" Foreground="#FFF5F1F1" Background="#FF08C5D8" BorderBrush="{x:Null}"/>
            <Button x:Name="btnBeforeTreatment" Content="Before Treatment" Style="{StaticResource st_FlatButtonStyle}" Canvas.Left="293" Canvas.Top="708" Width="145" Height="93" Foreground="#FFF5F1F1" Background="#FF08C5D8" BorderBrush="{x:Null}"/>
            <Label x:Name="lblWelcome" Content="Welcome to HydraFacialMD" Height="42" Canvas.Left="114" Canvas.Top="625" Width="290" FontSize="22" Style="{StaticResource st_Label}" Foreground="#FF08C5D8"/>
            <Image Height="345" Source ="Skin/Images/t2/Right_Photo1.png" Canvas.Left="78" Canvas.Top="116" Width="348"/>
        </Canvas>

